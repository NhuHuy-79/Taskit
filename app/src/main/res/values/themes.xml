<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Taskit" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>


    <style name="Theme.Taskit" parent="Base.Theme.Taskit" />
    <style name="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>"
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_btn</item>
    </style>

    <!-- Custom TextInputEditText style -->
    <style name="Widget.MyApp.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    
    <style name="EditTextStyle">
        <item name="android:background">@drawable/shape_edt</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TitleStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_primary_variant</item>
    </style>
    
    <style name="AvatarView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/color_primary_variant</item>
    </style>

    <style name="CustomCheckboxBrand" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/shape_state_checkbox</item>
    </style>

    <style name="Scrollbar">
        <item name="android:background">@drawable/shape_scrollbar</item>
        <item name="android:height">40dp</item>
    </style>


    <!--Material Time Picker -->
    <style name="TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="materialTimePickerTitleStyle">@style/Picker.TitleTextAppearance</item>
        <item name="materialClockStyle">@style/TimePicker.Clock</item>
        <item name="materialButtonOutlinedStyle">@style/TimePicker.Button</item>
        <item name="chipStyle">@style/TimePicker.Chip</item>
        <item name="imageButtonStyle">@style/TimePicker.ImageButton</item>
       <!-- <item name="borderlessButtonStyle">@style/TimePicker.TextButton</item>-->
    </style>

    <style name="TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/color_surface</item>
        <item name="clockHandColor">@color/color_primary</item>
        <item name="clockNumberTextColor">@color/color_state_clock_text</item>
    </style>

    <style name="TimePicker.Button" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="TimePicker.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="chipBackgroundColor">@color/color_state_clock_chip_bg</item>
        <item name="android:textColor">@color/color_state_clock_chip_text</item>
        <!--<item name="android:textAppearance">@style/MyTitleTextAppearance</item>-->
    </style>

    <style name="TimePicker.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="iconTint">@color/black</item>
    </style>

    <!--Custom for Time Picker Title-->
    <style name="Picker.TitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    
    <!--Theme for Splash Screen -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
    </style>

    <!--Style for setting item-->

    <style name="SettingItemStyle">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>