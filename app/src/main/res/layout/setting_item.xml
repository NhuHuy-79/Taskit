<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_height="60dp"
        android:layout_width="match_parent"
        style="@style/SettingItemStyle"
        app:drawableStartCompat="@drawable/ic_account"
        android:text="Account"
        />

    <TextView
        android:layout_height="60dp"
        android:layout_width="match_parent"
        style="@style/SettingItemStyle"
        app:drawableStartCompat="@drawable/ic_language"
        android:text="Language"
        />

    <TextView
        android:layout_height="60dp"
        android:layout_width="match_parent"
        style="@style/SettingItemStyle"
        app:drawableStartCompat="@drawable/ic_dark_mode"
        android:text="Dark mode"
        />

    <TextView
        android:layout_height="60dp"
        android:layout_width="match_parent"
        style="@style/SettingItemStyle"
        app:drawableStartCompat="@drawable/ic_login"
        android:text="Login"
        />


    <TextView
        android:id="@+id/setting_item_login"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        style="@style/SettingItemStyle"
        app:drawableStartCompat="@drawable/icon_info"
        android:text="About us"
        />


</LinearLayout>